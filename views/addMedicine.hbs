<h1>Новий препарат</h1>


<form method="POST" action="/addMedicine">
    <div class="form-group">
        <label class="control-label col-sm-2" for="title">Назва препарату</label>
        <input type="text" name="title" id="title" required >
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="desc">Опис</label>
        <input type="text" name="desc" id="desc" required>
    </div>
    <div>
        <button type="submit" class="btn btn-primary mb-2 ">Зберегти</button>
    </div>
</form>
