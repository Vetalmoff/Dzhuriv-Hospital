<h1>Новий препарат</h1>

{{#if msg}}
    <div class="alert alert-danger">{{msg}}</div>
{{/if}}

<div class="form">
    <form method="POST" action="/addMedicine">
        <div class="form-group">
            <label class="control-label col-sm-3" for="title">Назва препарату</label>
            <input type="text" name="title" id="title" required >
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3" for="desc">Опис</label>
            <input type="text" name="desc" id="desc" required>
        </div>
        <div>
            <button type="submit" class="btn btn-info mb-2 ">Зберегти</button>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">
    </form>
</div>