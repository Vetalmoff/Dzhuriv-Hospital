<h1>Розхід</h1>

{{#if allMedicines.length}}
    <form method="POST" action="/addConsumption">
        <div class="form-group">
            <label for="title">Медикаменти</label>
            <select name="id" class="form-control" id="title">

                {{#each allMedicines}}
                    {{#if dataValues.count}}
                        <option value="{{dataValues.id}}">{{dataValues.title}}</option>
                    {{/if}}
                {{/each}}

            </select>
        </div>
        <div class="form-group">
            <label for="quantity">Кількість</label>
            <input type="number" name="quantity" id="quantity" required>
        </div>
        <div class="form-group">
            <label for="employeeName">Співробітник</label>
            <select name="employeeName" class="form-control" id="employeeName">

                {{#each allEmployees}}
                        <option value="{{dataValues.id}}">{{dataValues.name}}</option>
                {{/each}}

            </select>
        </div>
        <div class="form-group">
            <label for="pacientName">Пацієнт</label>
            <select name="pacientName" class="form-control" id="pacientName">

                {{#each allPacients}}
                        <option value="{{dataValues.id}}">{{dataValues.name}}</option>
                {{/each}}

            </select>
        </div>
        <div>
            <button type="submit" class="btn btn-primary mb-2">Ок</button>
        </div>
    </form>

{{else}}
    <h1>Медикаментів немає!</h1>
{{/if}}