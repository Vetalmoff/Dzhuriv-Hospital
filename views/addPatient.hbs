<h1>Новий пацієнт</h1>

<div class="form">
    <form method="POST" action="/addPatient">
        <div class="form-group">
            <label class="control-label col-sm-2" for="name">Ім'я</label>
            <input type="text" name="name" id="name" required>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="age">Вік</label>
            <input type="number" name="age" id="age" required>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="desc">Опис</label>
            <input type="text" name="desc" id="desc">
        </div>
        <div>
            <button type="submit" class="btn btn-primary mb-2">Зберегти</button>
        </div>
    </form>
</div>