<h1>Новий пацієнт</h1>

<div class="form">
    <form method="POST" action="/addPatient">
        <div class="form-group">
            <label class="control-label col-sm-3" for="name">Ім'я</label>
            <input type="text" name="name" id="name" required>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3" for="dateOfBirdth">Дата народження:</label>
                <input type="date" id="dateOfBirdth" name="dateOfBirdth" required
                    value="2020-00-00"
                    min="1900-01-01" max="2030-12-31">
                <br>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3" for="desc">Опис</label>
            <textarea rows="5" cols="40" name="desc" id="desc"></textarea>
        </div>
        <div>
            <button type="submit" class="btn btn-info mb-2">Зберегти</button>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">
    </form>
</div>