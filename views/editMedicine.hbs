<h1>Редагувати препарат</h1>


<form method="POST" action="/medicine/edit">
    <div class="form-group">
        <label for="title">Назва препарату</label>
        <input type="text" name="title" id="title" value="{{item.title}}">
    </div>
    <div class="form-group">
        <label for="desc">Опис</label>
        <input type="text" name="desc" id="desc" value="{{item.description}}">
    </div>
    <input type="hidden" value="{{item.id}}" name="id">
    <div>
        <button type="submit" class="btn btn-primary mb-2">Зберегти</button>
    </div>
</form>

<form action="/medicine/delete" method="POST">
    <input type="hidden" name="id" value="{{item.id}}">
    <button class="btn btn-danger" type="submit">Видалити</button>
</form>