<h1>Медсестра</h1>


<div class="form">
    <form method="POST" action="/employees/edit">
        <div class="form-group">
            <label class="col-sm-2" for="name">Ім'я</label>
            <input type="text" name="name" id="name" value="{{item.name}}" required>
        </div>
        <div class="form-group">
            <label class="col-sm-2" for="position">Посада</label>
            <input type="text" name="position" id="position" value="{{item.position}}">
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="desc">Опис</label>
            <textarea rows="5" cols="40" name="desc" id="desc">{{item.description}}</textarea>
        </div>
        <input type="hidden" value="{{item.id}}" name="id">
        <div>
            <button type="submit" class="btn btn-info mb-2">Зберегти</button>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">
    </form>

    <form action="/employees/delete" method="POST">
        <input type="hidden" name="id" value="{{item.id}}">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button class="btn btn-danger" type="submit">Видалити</button>
    </form>
</div>