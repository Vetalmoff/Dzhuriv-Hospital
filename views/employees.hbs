<h1>Співробітники</h1>

{{#if success}}
    <p class="alert alert-success">{{success}}</p>
{{/if}}

{{#if error}}
    <p class="alert alert-danger">{{error}}</p>
{{/if}}

{{#if employees.length}}
    <table class="table">
        <thead class="thead-dark">
            <tr>
            <th scope="col">#</th>
            <th scope="col">Ім'я</th>
            <th scope="col">Посада</th>
            <th scope="col">Опис</th>
            <th scope="col"></th>
            </tr>
        </thead>
        {{#each employees}}
            <tbody>
                <tr>
                <th scope="row">{{index @index}}</th>
                <td>{{name}}</td>
                <td>{{position}}</td>
                <td>{{description}}</td>
                {{#unless @root.isModerator}}
                    <td><a class="btn btn-info" href="/employees/{{id}}/edit">Редагувати</a></td>
                {{/unless}}
                </tr>
            </tbody>
        {{/each}}
    </table>
{{else}}
    <h1>Нікого не має</h1>
{{/if}}