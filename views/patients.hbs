<h1>Пацієнти</h1>


{{#if patients.length}}
    <table class="table">
        <thead class="thead-dark">
            <tr>
            <th scope="col">#</th>
            <th scope="col">Ім'я</th>
            <th scope="col">Вік</th>
            <th scope="col">Опис</th>
            <th scope="col"></th>
            </tr>
        </thead>
        {{#each patients}}
            <tbody>
                <tr>
                <th scope="row">{{index @index}}</th>
                <td>{{name}}</td>
                <td>{{age}}</td>
                <td>{{description}}</td>
                {{#unless @root.isModerator}}
                    <td><a class="btn btn-info" href="/patients/{{id}}/edit">Редагувати</a></td>
                {{/unless}}
                </tr>
            </tbody>
        {{/each}}
    </table>
{{else}}
    <h1>Нікого не має</h1>
{{/if}}